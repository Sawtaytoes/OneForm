{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "listEmittedFiles": true,
    "noEmit": false,
    "noEmitOnError": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "rootDir": "./src",
  },
  "exclude": [
    "**/*.spec*",
    "**/*.stories*",
    "**/*.test*",
  ],
  "include": [
    "src/**/*",
  ],
}
